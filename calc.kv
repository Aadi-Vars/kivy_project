<Button>
	size_hint:(0.2,0.2)
	font_size:60

<calc_screen>
	BoxLayout:
		size_hint:(1,1)
		orientation:"vertical"
		padding:20
		spacing:10
		
		TextInput:
			id:text_input
			text:"0"
			size_hint:(1,0.3)
			halign:"right"
			font_size:100
			
		GridLayout:
			spacing:2
			rows:9
			cols:4
			Button:
				text:"AC"
				on_release:root.clear()
			Button:
				text:"->"
				on_release:root.back()
			Button:
				text:"+/-"
				on_release:root.change_sign()
			Button:
				text:"รท"
				on_release:root.divide()
			Button:
				text:"7"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("7")
				
			Button:
				text:"8"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("8")
			Button:
				text:"9"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("9")
			Button:
				text:"x"
				on_release:root.multipy()
			Button:
				text:"4"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("4")
			Button:
				text:"5"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("5")
			Button:
				text:"6"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("6")
			Button:
				text:"-"
				on_release:root.subtract()
			Button:
				text:"1"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("1")
			Button:
				text:"2"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("2")
			Button:
				text:"3"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("3")
			Button:
				text:"+"
				on_release:root.add()
			Button:
				text:""
				background_normal:''
				background_color:(59/255,60/255,64/255)
			Button:
				text:"0"
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update("0")
			Button:
				text:"."
				background_normal:''
				background_color:(59/255,60/255,64/255)
				on_release:root.update(".")
				
			
			Button:
				text:"="
				on_release:root.equal()
			